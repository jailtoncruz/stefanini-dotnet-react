{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:web": {
      "cache": false,
      "persistent": true
    },
    "dev:api": {
      "cache": false,
      "persistent": true
    },

    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "StefaniniDotNetReactChallenge.API/wwwroot/**",
        "StefaniniDotNetReactChallenge.API/bin/**",
        "StefaniniDotNetReactChallenge.API/obj/**"
      ]
    },
    "build:web": {
      "outputs": ["StefaniniDotNetReactChallenge.API/wwwroot/**"]
    },
    "build:api": {
      "dependsOn": ["build:web"],
      "outputs": [
        "StefaniniDotNetReactChallenge.API/bin/**",
        "StefaniniDotNetReactChallenge.API/obj/**"
      ]
    }
  }
}
